/*******************************************************************************
    QWidget
 *******************************************************************************/

QWidget:disabled
{
    color: $DISABLE_COLOR;
}

QWidget
{
    color: $WIDGET_COLOR;
    background: $WIDGET_BACKGROUND;
    border: $WIDGET_BORDER;
    outline: 0px;
}

/*******************************************************************************
    QToolTip
 *******************************************************************************/

QToolTip
{
    color: $TOOLTIP_COLOR;
    background: $TOOLTIP_BACKGROUND;
    padding: 1px;
}

/*******************************************************************************
    QTableView
 *******************************************************************************/

QTableView
{
    gridline-color: $GRIDLINE_COLOR;
    background: $LIST_BACKGROUND;
    alternate-background-color: $ALT_LIST_BACKGROUND;
}

/*******************************************************************************
    QListView
 *******************************************************************************/

QListView
{
    gridline-color: $GRIDLINE_COLOR;
    background: $LIST_BACKGROUND;
    alternate-background-color: $ALT_LIST_BACKGROUND;
}

/*******************************************************************************
    QTextEdit
 *******************************************************************************/

QTextEdit
{
    color: $EDITION_COLOR;
    background: $EDITION_BACKGROUND;
}

/*******************************************************************************
    QDateEdit
 *******************************************************************************/

QDateEdit
{
    color: $EDITION_COLOR;
    background: $EDITION_BACKGROUND;
}

QDateEdit::down-arrow
{
    image: url(:/pixmaps/arrow-bot.png);
}

/*******************************************************************************
     QSpinBox QDoubleSpinBox
 *******************************************************************************/

QSpinBox, QDoubleSpinBox
{
    color: $EDITION_COLOR;
    background: $SPINBOX_BACKGROUND;/*$EDITION_BACKGROUND;*/
    min-height: 20px;
}

QSpinBox::up-button, QDoubleSpinBox::up-button
{
    subcontrol-origin: border;
    subcontrol-position: top right;
    border: none;
    background: $PUSH_BUTTON_BACKGROUND;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover
{
    background: $PUSH_BUTTON_HOVER_BACKGROUND;
}

QSpinBox::up-arrow, QDoubleSpinBox::up-arrow
{
    image: url(:/pixmaps/arrow-top.png);
}

QSpinBox::up-arrow:disabled, QDoubleSpinBox::up-arrow:disabled
{
    image: url(:/pixmaps/arrow-top-disabled.png);
}

QSpinBox::down-button, QDoubleSpinBox::down-button
{
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    border: none;
    background: $PUSH_BUTTON_BACKGROUND;
}

QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover
{
    background: $PUSH_BUTTON_HOVER_BACKGROUND;
}

QSpinBox::down-arrow, QDoubleSpinBox::down-arrow
{
    image: url(:/pixmaps/arrow-bot.png);
}

QSpinBox::down-arrow:disabled, QDoubleSpinBox::down-arrow::disabled
{
    image: url(:/pixmaps/arrow-bot-disabled.png);
}

/*******************************************************************************
     QComboBox
 *******************************************************************************/

QComboBox
{
    border-radius: $COMBO_BOX_RADIUS;
    background-color: $COMBO_BOX_BACKGROUND;
    height: $COMBO_BOX_SIZE;
    min-width: $COMBO_BOX_SIZE;
    padding: 0px $COMBO_BOX_PADDING;
}

QComboBox::drop-down
{
    padding-right: $COMBO_BOX_PADDING;
    image: url(:/pixmaps/arrow-bot.png);
    subcontrol-origin: padding;
    subcontrol-position: center right;
}

QComboBox::hover
{
    background-color: $COMBO_BOX_HOVER_BACKGROUND;
}

QComboBox QAbstractItemView:item
{
    background-color: $COMBO_BOX_ITEM_BACKGROUND;
    selection-background-color: $COMBO_BOX_ITEM_SELECTED_BACKGROUND;
    selection-color: $COMBO_BOX_ITEM_SELECTED_COLOR;
    outline: 0px;
}

QComboBox:item:selected
{
    selection-background-color: $COMBO_BOX_ITEM_SELECTED_BACKGROUND;
    selection-color: $COMBO_BOX_ITEM_SELECTED_COLOR;
}

/*******************************************************************************
     QCheckBox
 *******************************************************************************/

QCheckBox
{
    background: none;
}

QCheckBox::indicator
{
    width: $CHECKBOX_SIZE;
    height: $CHECKBOX_SIZE;
}

QCheckBox::indicator:unchecked
{
    image: url(:/pixmaps/checkbox.png);
}

QCheckBox::indicator:checked
{
    image: url(:/pixmaps/checkbox-checked.png);
}

QCheckBox::indicator:indeterminate
{
    image: url(:/pixmaps/checkbox-partial.png);
}

QCheckBox::indicator:disabled:unchecked
{
    image: url(:/pixmaps/checkbox-disabled.png);
}

QCheckBox::indicator:disabled:checked
{
    image: url(:/pixmaps/checkbox-checked-disabled.png);
}

/*******************************************************************************
     QTreeView
 *******************************************************************************/

QTreeView
{
     alternate-background-color: $ALT_LIST_BACKGROUND;
     background: $LIST_BACKGROUND;
}

QTreeView::item
{
    padding: $TREE_VIEW_ITEM_PADDING 0px;
}

QTreeView::indicator:indeterminate
{
    image: url(:/pixmaps/checkbox-partial.png);
}

QTreeView::indicator:checked
{
    background: url(:/pixmaps/checkbox-checked.png);
}

QTreeView::indicator:unchecked
{
    image: url(:/pixmaps/checkbox.png);
}

QTreeView::branch:has-siblings:!adjoins-item
{
    image: none;
}

QTreeView::branch:has-siblings:adjoins-item
{
    image: none;
}

QTreeView::branch:!has-children:!has-siblings:adjoins-item
{
    image: none;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings
{
    border-image: none;
    image: url(:pixmaps/arrow-right.png);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings
{
    border-image: none;
    image: url(:pixmaps/arrow-bot.png);
}


/*******************************************************************************
     QLabel
 *******************************************************************************/

QLabel
{
    color: $EDITION_COLOR;
    background: none;
}

QLabel#innerTitle
{
    color: $TOOLBOX_INNER_TITLE;
    background: none;
}

/*******************************************************************************
     QTableWidget
 *******************************************************************************/

QTableWidget
{
    gridline-color: $GRIDLINE_COLOR;
    background: $LIST_BACKGROUND;
    alternate-background-color: $ALT_LIST_BACKGROUND;
}

/*******************************************************************************
     QHeaderView
 *******************************************************************************/

QHeaderView
{
    background-color: $HEADER_BACKGROUND;
    color: $HEADER_COLOR;
    border: none;
}

QHeaderView::section
{
    background-color: $HEADER_BACKGROUND;
    color: $HEADER_COLOR;
    padding: $HEADER_PADDING;
    padding-left: $HEADER_LEFT_PADDING;
    padding-right:$HEADER_RIGHT_PADDING;
    min-height: $HEADER_HEIGHT;
    border: none;
}

QHeaderView::down-arrow
{
    image: url(:/pixmaps/arrow-bot.png);
}

QHeaderView::up-arrow
{
    image: url(:/pixmaps/arrow-top.png);
}

/*******************************************************************************
     QLineEdit
 *******************************************************************************/

QLineEdit
{
    color: $EDITION_COLOR;
    background: $QLINEEDIT_BACKGROUND;
    border-radius: $LINE_EDIT_RADIUS;
}

/*******************************************************************************
     QProgressBar
 *******************************************************************************/

QProgressBar
{
    border: $PROGRESS_BAR_BORDER;
    border-radius: $PROGRESS_BAR_RADIUS;
    background-color: $PROGRESS_BAR_BACKGROUND;
    max-height: $PROGRESS_BAR_HEIGHT;
    text-align: right;
    color: $PROGRESS_BAR_TEXT_COLOR;
}

QProgressBar::chunk
{
    border-radius: $PROGRESS_BAR_RADIUS;
    background-color: $PROGRESS_BAR_COLOR;
}

/*******************************************************************************
     QStatusBar
 *******************************************************************************/

QStatusBar
{
    background: $STATUS_BAR_BACKGROUND;
    min-height: $STATUS_BAR_HEIGHT;
}

QStatusBar QWidget
{
    background: $STATUS_BAR_BACKGROUND;
    height: $STATUS_BAR_HEIGHT;
}

QStatusBar::item
{
    background: $STATUS_BAR_BACKGROUND;
}

/*******************************************************************************
     QRadioButton
 *******************************************************************************/

QRadioButton
{
    background: none;
    outline: 0px;
}

QRadioButton::indicator
{
    width: $RADIO_BUTTON_SIZE;
    height: $RADIO_BUTTON_SIZE;
}

QRadioButton::indicator:unchecked
{
    image: url(:/pixmaps/radio.png);
}

QRadioButton::indicator:checked
{
    image: url(:/pixmaps/radio-checked.png);
}

QRadioButton::indicator:indeterminate
{
    image: url(:/pixmaps/radio-partial.png);
}

QRadioButton::indicator:disabled:unchecked
{
    image: url(:/pixmaps/radio-disabled.png);
}

QRadioButton::indicator:disabled:checked
{
    image: url(:/pixmaps/radio-checked-disabled.png);
}

/*******************************************************************************
     QSlider
 *******************************************************************************/

QSlider
{
    background: none;
}

QSlider::groove:horizontal
{
    border-radius: $SLIDER_RADIUS;
    background: $SLIDER_HORIZONTAL_BACKGROUND;
    height: $SLIDER_SIZE;
}

QSlider::handle:horizontal
{
    background: $SLIDER_COLOR;
    width: $SLIDER_SIZE;
    border-radius: $SLIDER_RADIUS;
}

QSlider::groove:vertical
{
    border-radius: $SLIDER_RADIUS;
    background: $SLIDER_VERTICAL_BACKGROUND;
    width: $SLIDER_SIZE;
}

QSlider::handle:vertical
{
    background: $SLIDER_COLOR;
    height: $SLIDER_SIZE;
    border-radius: $SLIDER_RADIUS;
}

QSlider::groove:horizontal:disabled
{
    background: $SLIDER_DISABLED_HORIZONTAL_BACKGROUND;
}

QSlider::handle:horizontal:disabled
{
    background: $SLIDER_DISABLED_COLOR;
}

QSlider::groove:vertical:disabled
{

    background: $SLIDER_DISABLED_VERTICAL_BACKGROUND;
}

QSlider::handle:vertical:disabled
{
    background: $SLIDER_DISABLED_COLOR;
}

/*******************************************************************************
     QPushButton QToolButton
 *******************************************************************************/

QPushButton, QPushButton:flat, QToolButton
{
    border-radius: $PUSH_BUTTON_RADIUS;
    background-color: $PUSH_BUTTON_BACKGROUND;
    height: $PUSH_BUTTON_SIZE;
    min-width: $PUSH_BUTTON_SIZE;
    padding: 0px $PUSH_BUTTON_PADDING;
    outline: 0px;
}

QPushButton:hover, QToolButton:hover
{
    background-color: $PUSH_BUTTON_HOVER_BACKGROUND;
}

QPushButton:pressed, QToolButton:pressed
{
    background-color: $PUSH_BUTTON_PRESSED_BACKGROUND;
}

QPushButton:checked, QToolButton:checked
{
    background-color: $PUSH_BUTTON_CHECKED_BACKGROUND;
    color: $HIGHLIGHT_COLOR;
    border: 2px solid $PUSH_BUTTON_CHECKED_BORDER;
}

QPushButton::menu-indicator
{
    image: url(:/pixmaps/drop-down.png);
    subcontrol-origin: padding;
    subcontrol-position: center right;
}

QPushButton::menu-indicator:flat
{
    image: none;
}

QPushButton:flat
{
    border: none;
    background-color: none;
    height: $LAYOUT_BUTTON_MIN_HEIGHT;
}

QPushButton:flat:hover
{
    border: none;
    background-color: none;
}

QPushButton:flat:pressed
{
    border: none;
    background-color: none;
}

QPushButton::menu-indicator:flat
{
    image: none;
}

QPushButton:disabled
{
   background-color: $PUSH_BUTTON_DISABLED_BACKGROUND;
}

QToolButton#fullScreenButton:hover,
QToolButton#screenshotButton:hover,
QToolButton#quitButton:hover
{
    background-color: $HOME_PAGE_BUTTON_HOVER_BACKGROUND;
}

/*******************************************************************************
     QSplitter
 *******************************************************************************/

QSplitter::handle:horizontal
{
    border: none;
}

QSplitter::handle:vertical
{
    border: none;
}

/*******************************************************************************
     QGroupBox
 *******************************************************************************/

QGroupBox
{
    border: $GROUP_BOX_BORDER;
    margin-top: $GROUP_BOX_MARGIN;
    border-radius: $GROUP_BOX_RADIUS;
    background: none;
}

QGroupBox::title
{
    subcontrol-origin: margin;
    subcontrol-position: top center;
    color: $GROUP_BOX_COLOR;
    font-size: $GROUP_BOX_FONTSIZE;
}

QGroupBox::indicator::checked
{
    image: url(:/pixmaps/checkbox-checked.png);
}

QGroupBox::indicator::unchecked
{
    image: url(:/pixmaps/checkbox.png);
}

/*******************************************************************************
     QTabBar
 *******************************************************************************/

QTabBar::tab
{
    color: $TAB_COLOR;
    background: $TAB_BACKGROUND;
    padding : 0 $TAB_PADDING;
    height: $TAB_HEIGHT;
}

QTabBar::tab:hover
{
    background: $TAB_HOVER_BACKGROUND;
    color: $TAB_HOVER_COLOR;
}

QTabBar::tab:pressed
{
    background: $TAB_PRESSED_BACKGROUND;
    color: $TAB_HOVER_COLOR;
}

QTabBar::tab:selected
{
    background: $TAB_SELECTED_BACKGROUND;
    color: $TAB_SELECTED_COLOR;
}

/*******************************************************************************
     QScrollBar
 *******************************************************************************/

QScrollBar:horizontal
{
    background: $SCROLL_BAR_HORIZONTAL_BACKGROUND;
    height: $SCROLL_BAR_WIDTH;
    min-width :$SCROLL_BAR_MIN_SIZE;
}

QScrollBar::handle:horizontal
{
    border-radius: $SCROLL_BAR_RADIUS;
    border: 1px solid $SCROLL_BAR_HORIZONTAL_BACKGROUND;
    background: $SCROLL_BAR_HORIZONTAL_COLOR;
    height: $SCROLL_BAR_WIDTH;
    min-width :$SCROLL_BAR_MIN_SIZE;
}

QScrollBar::add-line:horizontal
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

QScrollBar::sub-line:horizontal
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

QScrollBar:vertical
{
    background: $SCROLL_BAR_VERTICAL_BACKGROUND;
    width: $SCROLL_BAR_WIDTH;
    min-height :$SCROLL_BAR_MIN_SIZE;
}

QScrollBar::handle:vertical
{
    border-radius: $SCROLL_BAR_RADIUS;
    border: 1px solid $SCROLL_BAR_HORIZONTAL_BACKGROUND;
    background: $SCROLL_BAR_VERTICAL_COLOR;
    width: $SCROLL_BAR_WIDTH;
    min-height: $SCROLL_BAR_MIN_SIZE;
}

QScrollBar::add-line:vertical
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

QScrollBar::sub-line:vertical
{
    background: none;
    width: 0px;
    height: 0px;
    border: none;
}

/*******************************************************************************
      QMenu
 *******************************************************************************/

QMenu
{
    background-color: $MENU_ITEM_BACKGROUND;
}

QMenu::indicator:non-exclusive:unchecked
{
    image: url(:/pixmaps/checkbox.png);
}

QMenu::indicator:non-exclusive:checked
{
    image: url(:/pixmaps/checkbox-checked.png);
}

QMenu::indicator:exclusive:unchecked
{
    image: url(:/pixmaps/radio.png);
}

QMenu::indicator:exclusive:checked
{
    image: url(:/pixmaps/radio-checked.png);
}

QMenu::separator
{
    border: $MENU_SEPARATOR_BORDER;
}

QMenu::item
{
    border: none;
    border-left: 5px solid $MENU_ITEM_BACKGROUND; /*magic value !!!*/
    padding: 4px 22px; /*magic value !!!*/
}

QMenu::item:selected
{
    border: none;
    border-left: 5px solid $MENU_ITEM_HOVER_BACKGROUND; /*magic value !!!*/
    background: $MENU_ITEM_HOVER_BACKGROUND;
    color: $MENU_ITEM_SELECTED_COLOR;
}

